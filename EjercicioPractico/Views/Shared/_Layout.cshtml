<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ejercicio ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="topnav">
        @Html.ActionLink("Inicio", "Index", "Home")
        @Html.ActionLink("Listar", "Listar", "Prospecto")
        @Html.ActionLink("Agregar", "Agregar", "Prospecto")
        @Html.ActionLink("Evaluar", "Revisar", "Prospecto")
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <p>&copy; @DateTime.Now.Year - Ejercicio ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
